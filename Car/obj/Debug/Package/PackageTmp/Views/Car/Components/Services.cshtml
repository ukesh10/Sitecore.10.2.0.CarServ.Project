@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@model Sitecore.Data.Items.Item[]

@{
    int count = 0;
}

@if (Model != null)
{
    <!-- Service Start -->
    <div class="container-xxl service py-5">
        <div class="container">
            <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
                <h6 class="text-primary text-uppercase">@Html.Sitecore().Field("Title", Model)</h6>
                <h1 class="mb-5">@Html.Sitecore().Field("Header", Model)</h1>
            </div>
            <div class="row g-4 wow">
                    <div class="col-lg-4">
                        <div class="nav w-100 nav-pills me-4">

                            <button class="nav-link w-100 d-flex align-items-center text-start p-4 mb-4 active" data-bs-toggle="pill" data-bs-target="tab-pane-1" type="button">
                                <i class="fa fa-car-side fa-2x me-3"></i>
                                <h4 class="m-0">Diagnostic Test</h4>
                            </button>
                            <button class="nav-link w-100 d-flex align-items-center text-start p-4 mb-4" data-bs-toggle="pill" data-bs-target="tab-pane-2" type="button">
                                <i class="fa fa-car-side fa-2x me-3"></i>
                                <h4 class="m-0">Engine Servicing</h4>
                            </button>
                            <button class="nav-link w-100 d-flex align-items-center text-start p-4 mb-4" data-bs-toggle="pill" data-bs-target="tab-pane-3" type="button">
                                <i class="fa fa-car-side fa-2x me-3"></i>
                                <h4 class="m-0">Tires Replacement</h4>
                            </button>
                            <button class="nav-link w-100 d-flex align-items-center text-start p-4 mb-4" data-bs-toggle="pill" data-bs-target="tab-pane-4" type="button">
                                <i class="fa fa-car-side fa-2x me-3"></i>
                                <h4 class="m-0">Oil Changing</h4>
                            </button>
                        </div>
                    </div>
                    <div class="col-lg-8">
                        <div class="tab-content w-100">


                            @foreach (var item in Model)
                            {
                                var active = count == 0 ? "active" : String.Empty;
                                <div class="tab-pane fade show @active" id="tab-pane">
                                    <div class="row g-4">
                                        <div class="col-md-6" style="min-height: 350px;">
                                            <div class="position-relative h-100">
                                                @Html.Sitecore().Field("Image", item, new { @class = "position-absolute img-fluid w-100 h-100", @style = "object-fit: cover;" })
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <h3 class="mb-3">@Html.Sitecore().Field("Exp", item)</h3>
                                            <p class="mb-4">@Html.Sitecore().Field("Description", item)</p>
                                            <p><i class="fa fa-check text-success me-3"></i>@Html.Sitecore().Field("List Item 1", item)</p>
                                            <p><i class="fa fa-check text-success me-3"></i>@Html.Sitecore().Field("List Item 2", item)</p>
                                            <p><i class="fa fa-check text-success me-3"></i>@Html.Sitecore().Field("List Item 3", item)</p>
                                            @*<a href="" class="btn btn-primary py-3 px-5 mt-3">Read More<i class="fa fa-arrow-right ms-3"></i></a>*@
                                            @Html.Sitecore().Field("Primary Link", item)
                                        </div>
                                    </div>
                                </div>
                                count++;
                            }

                            </div>
                    </div>
                </div>
        </div>
    </div>
    <!-- Service End -->
}