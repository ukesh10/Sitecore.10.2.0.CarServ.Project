@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@model Sitecore.Data.Items.Item[]

@if (Model != null)
{
    <!-- Testimonial Start -->
    <div class="container-xxl py-5 wow fadeInUp">
        <div class="container">
            <div class="text-center">
                <h6 class="text-primary text-uppercase">@Html.Sitecore().Field("Title", Model)</h6>
                <h1 class="mb-5">@Html.Sitecore().Field("Header", Model)</h1>
            </div>
            <div class="owl-carousel testimonial-carousel position-relative">
                @foreach (var item in Model)
                {
                    <div class="testimonial-item text-center">
                        @*<img class="bg-light rounded-circle p-2 mx-auto mb-3" src="img/testimonial-1.jpg" style="width: 80px; height: 80px;">*@
                        @Html.Sitecore().Field("Image", item, new{@class="bg-light rounded-circle p-2 mx-auto mb-3", @style = "width: 80px; height: 80px;"})
                        <h5 class="mb-0">@Html.Sitecore().Field("Name", item)</h5>
                        <p>@Html.Sitecore().Field("Role", item)</p>
                        <div class="testimonial-text bg-light text-center p-4">
                            <p class="mb-0">@Html.Sitecore().Field("Description", item)</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <!-- Testimonial End -->

}